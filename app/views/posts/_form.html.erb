<div class="field-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'field-control' %>
</div>
<div>
  <%= f.label :author %>
  <%= f.select :author_id, Author.all.map { |a| [a.name, a.id] }, include_blank: "None" %>
</div>
<div>
  <%= f.label :body %>
  <%= f.text_area :body, rows: 10 %>
</div>
